  @model CreatedDepartmentDTO
@{
    ViewData["Title"] = "Create";
}

<div class="card border border-primary">
    <div class="card-header  bg-primary">
        <h1 class="text-white">Create New Department</h1>
    </div>
    <div class="card-body">
            <form method="post" asp-controller="Departments" asp-action="Create">

                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Code"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" asp-for="description"></label>
                    <textarea class="form-control" asp-for="description" cols="12" rows="12"></textarea>
                </div>
                <div asp-validation-summary="All"></div>
                <div class="mt-4 m-auto">
                    <input class="btn btn-primary" type="submit" value="Create" />
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
                </div>
            </form>
        </div>
    </div>

